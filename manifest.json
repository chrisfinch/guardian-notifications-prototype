{
  "name": "Notifications Panel",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Notifications Prototype",
  "permissions": ["tabs", "*://*.theguardian.com/*"],
  "content_scripts": [{
    "matches": ["*://*.theguardian.com/*"],
    "js": ["/js/jquery-2.1.0.min.js", "/js/notifications-panel.js"]
  }],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "/html/prefs.html"
  },
  "web_accessible_resources": ["/html/recommended_for_you.html", "/html/followed_by_you.html", "/html/single.html"],
  "background": {
    "scripts": [
        "/js/jquery-2.1.0.min.js", 
        "/js/background.js"
    ],
    "persistent": false
  }
}